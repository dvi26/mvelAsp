<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mvelMaui.Views.puntuarCombate"
             Title="puntuarCombate" xmlns:local="clr-namespace:mvelMaui.Models">

    <Page.BindingContext>
        <local:clsViewModelPuntuarCombate />
    </Page.BindingContext>
    
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Personajes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Foto}"></Image>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Slider></Slider>

        <ListView ItemsSource="{Binding Personajes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Foto}"></Image>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Slider></Slider>
    </VerticalStackLayout>
</ContentPage>